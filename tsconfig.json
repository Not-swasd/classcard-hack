{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "out",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ]
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src"]
}
